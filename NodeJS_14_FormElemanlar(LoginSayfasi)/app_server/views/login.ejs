<link rel="stylesheet" href="../../public/css/style.css">
<form action="/login" method="POST" class="text-center form-signin">

    <div class="alert alert-success h3 mb-3 font-weight-normal">Lütfen Giriş Yapınız</div>

    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email adres" required autofocus>

    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Parola" required>

    <!-- <div class="checkbox mb-3">
        <label>
            <input type="checkbox" value="remember-me"> Remember me
        </label>
    </div> -->
    <button class="btn btn-lg btn-primary btn-block" type="submit" value="Giriş">
        Giriş
    </button>
    <p class="mt-5 mb-3 text-muted">
        &copy; 2020
    </p>

    <% if (typeof email!='undefined') { %>
    <h6><%=email %></h6>>
    <% } %>

    <% if (typeof password!='undefined') { %>
    <h6><%=password %></h6>
    <% } %>

</form>